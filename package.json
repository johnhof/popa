{
  "name": "popa",
  "version": "1.0.0",
  "description": "Personal One Page Application",
  "main": "index.js",
  "scripts": {
    "test": "mocha test",
    "build": "node ./node_modules/.bin/neutrino build --use neutrino-preset-react",
    "dev": "bash config.env && cat ascii.txt && node ./node_modules/.bin/neutrino start --use neutrino-preset-react",
    "prod": "bash config.env && cat ascii.txt && node server.js",
    "prestart": "npm run build",
    "start": "bash config.env && cat ascii.txt && node server.js"
  },
  "neutrino": {
    "options": {
      "html": {
        "title": "John Hofrichter"
      }
    },
    "entry": {
      "vendor": [
        "react",
        "react-dom",
        "react-router-dom",
        "react-hot-loader",
        "react-headroom",
        "react-waypoint",
        "react-number-format",
        "prop-types",
        "scroll-component",
        "flexboxgrid",
        "normalize.css",
        "react-particles-js",
        "axios"
      ]
    },
    "config": {
      "output": {
        "publicPath": "/"
      },
      "devServer": {
        "compress": true,
        "host": "0.0.0.0",
        "port": "8080",
        "filename": "app/index.js",
        "historyApiFallback": true,
        "clientLogLevel": "none",
        "noInfo": true,
        "headers": {
          "X-Powered-By": "Hof"
        }
      }
    }
  },
  "author": "John Hofrichter",
  "license": "MIT",
  "dependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "event-emitter": "^0.3.5",
    "flexboxgrid": "^6.3.1",
    "koa": "^2.3.0",
    "koa-helmet": "^3.2.0",
    "koa-logger": "^3.0.0",
    "koa-static": "^3.0.0",
    "lodash": "^4.17.4",
    "morgan": "^1.8.1",
    "neutrino": "^5.0.0",
    "neutrino-preset-node": "^5.0.0",
    "neutrino-preset-react": "^5.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-headroom": "^2.1.4",
    "react-hot-loader": "next",
    "react-number-format": "^1.1.2",
    "react-particles-js": "^1.5.0",
    "react-responsive": "^1.3.0",
    "react-router-dom": "^4.0.0",
    "react-waypoint": "^5.2.1",
    "scroll-component": "^0.4.4",
    "mz": "^2.6.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^3.2.0"
  }
}
